.Card 
	width 170px
	background #c2ac37
	border 5px solid black
	box-shadow 0 0 10px rgba(black,.5)
	border-radius .5em 
	padding .5em
	
	&-name
		color white
		text-transform uppercase
		margin 0 0 .5em 0
		font-size 1em
		
	&-image 
		width 100%
		
	&-description 
		background white
		padding .5em
		font-size 12px
		margin-bottom .5em
		border 2px solid black
	&-attack
		background black
		color white
		font-size .7em
		
